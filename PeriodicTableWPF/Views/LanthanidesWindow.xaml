                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="EuNumber" Text="63"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Гадолиний-->
        <Border Grid.Row="2"
                Grid.Column="8"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Gd">
                <StackPanel>
                    <TextBlock x:Name="GdSymbol" Text="Gd" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="GdName" Text="Гадолиний" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="GdAtomicMass" Text="157,25" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="GdNumber" Text="64"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Тербий-->
        <Border Grid.Row="2"
                Grid.Column="9"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Tb">
                <StackPanel>
                    <TextBlock x:Name="TbSymbol" Text="Tb" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="TbName" Text="Тербий" Style="{StaticResource tBlocksElStyle}"/>
