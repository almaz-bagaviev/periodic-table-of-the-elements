                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="TmNumber" Text="69"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Иттербий-->
        <Border Grid.Row="2"
                Grid.Column="14"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Yb">
                <StackPanel>
                    <TextBlock x:Name="YbSymbol" Text="Yb" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="YbName" Text="Иттербий" Style="{StaticResource tBlocksElStyle}"/>
