<Window x:Class="PeriodicTableWPF.Views.LanthanidesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeriodicTableWPF.Views"
        mc:Ignorable="d"
        Title="Лантаноиды" Height="120" Width="1300">

    <Window.Resources>
        <Style TargetType="Border" x:Key="borderStyle">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="tBlocksElStyle">
            <Setter Property="Margin" Value="3,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.05*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="1"
            Grid.ColumnSpan="16"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Л А Н Т А Н О И Д Ы"/>

        <!--Лантан-->
        <Border Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="La">
                <StackPanel>
                    <TextBlock x:Name="LaSymbol" Text="La" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="LaName" Text="Лантан" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="LaAtomicMass" Text="138,906" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="LaNumber" Text="57"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Церий-->
        <Border Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Ce">
                <StackPanel>
                    <TextBlock x:Name="CeSymbol" Text="Ce" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="CeName" Text="Церий" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="CeAtomicMass" Text="140,12" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="CeNumber" Text="58"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Празеодим-->
        <Border Grid.Row="2"
                Grid.Column="3"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Pr">
                <StackPanel>
                    <TextBlock x:Name="PrSymbol" Text="Pr" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="PrName" Text="Празеодим" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="PrAtomicMass" Text="140,908" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="PrNumber" Text="59"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Неодим-->
        <Border Grid.Row="2"
                Grid.Column="4"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Nd">
                <StackPanel>
                    <TextBlock x:Name="NdSymbol" Text="Nd" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="NdName" Text="Неодим" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="NdAtomicMass" Text="144,24" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="NdNumber" Text="60"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Прометий-->
        <Border Grid.Row="2"
                Grid.Column="5"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Pm">
                <StackPanel>
                    <TextBlock x:Name="PmSymbol" Text="Pm" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="PmName" Text="Прометий" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="PmAtomicMass" Text="[145]" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="PmNumber" Text="61"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!--Самарий-->
        <Border Grid.Row="2"
                Grid.Column="6"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Sm">
                <StackPanel>
                    <TextBlock x:Name="SmSymbol" Text="Sm" Style="{StaticResource tBlocksElStyle}"/>
