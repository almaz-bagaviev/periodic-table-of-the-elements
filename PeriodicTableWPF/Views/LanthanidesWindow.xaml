            </StackPanel>
        </Border>

        <!--Люцетий-->
        <Border Grid.Row="2"
                Grid.Column="15"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Lu">
                <StackPanel>
                    <TextBlock x:Name="LuSymbol" Text="Lu" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="LuName" Text="Люцетий" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="LuAtomicMass" Text="174,97" Style="{StaticResource tBlocksElStyle}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock x:Name="LuNumber" Text="71"/>
