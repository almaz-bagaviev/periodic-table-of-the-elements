            </StackPanel>
        </Border>

        <!--Тулий-->
        <Border Grid.Row="2"
                Grid.Column="13"
                Style="{StaticResource borderStyle}">
            <StackPanel Orientation="Horizontal" x:Name="Tm">
                <StackPanel>
                    <TextBlock x:Name="TmSymbol" Text="Tm" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="TmName" Text="Тулий" Style="{StaticResource tBlocksElStyle}"/>
                    <TextBlock x:Name="TmAtomicMass" Text="168,934" Style="{StaticResource tBlocksElStyle}"/>
