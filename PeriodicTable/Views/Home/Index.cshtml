@model Repository

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Периодическая система химических элементов Д.И.Менделеева</title>
</head>

<body>

    @{
        var chemicalElements = Model.ChemicalElements;
        int value;
    }

    @functions {
        enum Elements
        {
            mainElements,
            lanthanides,
            actinides
        }
    }

    @functions {
        double MassDouble(int i, Elements elements)
        {
            if (elements == Elements.mainElements) return Model.ChemicalElements[i].AverageAtomicMass;
            else if (elements == Elements.lanthanides) return Model.Lanthanides[i].AverageAtomicMass;
            else return Model.Actinides[i].AverageAtomicMass;
        }
        string MassString(int i, Elements elements)
        {
            if (elements == Elements.mainElements) return Model.ChemicalElements[i].AverageAtomicMassString;
            else if (elements == Elements.lanthanides) return Model.Lanthanides[i].AverageAtomicMassString;
            else return Model.Actinides[i].AverageAtomicMassString;
        }
    }

    <div>
        <p>
            Д. И. Менделеев - один из самых гениальных химиков XIX века;
            провёл многочисленные определения физических констант соединений
            (удельные объёмы, расширение и т. д.), изучал Донецкие месторождения каменного угля,
            разработал гидратную теорию растворов. Написал «Основы химии» (1868—1871) — труд,
            многочисленные издания которого оказали влияние на химиков-неоргаников.
        </p>
    </div>

